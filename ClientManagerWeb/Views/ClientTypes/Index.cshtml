@model IEnumerable<ClientManagerWeb.ViewModels.ClientTypes.ClientTypeViewModel>

@{
    ViewBag.Title = "Client types";
}

<h2 class="list-header">Client types</h2>

<p>
    @Html.ActionLink("Create new client type", "Create")
</p>
<table class="mainTable">
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
