@model ClientManagerWeb.ViewModels.SendLetter.SendLetterFormViewModel

@{
    ViewBag.Title = "Send letter";
}
          
<h2 class="new-letter-header">Send letter to client or group</h2>      
     
<fieldset>
    <legend>Letter form.</legend>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div style="padding: 20px 20px">
    @Html.ValidationSummary(true)
    <div style="display: table">
        <div style="display:table-row">
            <div class="editor-label" style="display: table-cell">
                @Html.LabelFor(model => model.ClientId) : 
            </div>
            <div class="editor-field" style="display: table-cell; font-size: 0.8em">
                @Html.DropDownList("ClientId", (IEnumerable<SelectListItem>)ViewBag.Clients, new { onchange = "javaScript:eraseType()" })
            </div>
        </div>
        <div style="display:table-row">
            <div class="editor-label" style="display: table-cell; width: 150px">
                @Html.LabelFor(model => model.ClientTypeId) : 
            </div>
            <div class="editor-field" style="display: table-cell; font-size: 0.8em">
                @Html.DropDownList("ClientTypeId", (IEnumerable<SelectListItem>)ViewBag.ClientTypes, new { onchange = "javaScript:eraseClient()" })
            </div>
        </div>
    </div>

    
    <div class="editor-label">
        @Html.LabelFor(model => model.Subject) : @Html.ValidationMessageFor(model => model.Subject)
    </div>
    <div class="editor-field" style="font-size: 0.8em">
        <input class="text-box single-line" style="width: 100%" data-val="true" data-val-required="Subject can not be empty" id="Subject" name="Subject" type="text" value="">
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.LetterBody) :
    </div>
    <div class="editor-field">
        <textarea cols="20" style="width: 100%" id="LetterBody" name="LetterBody" rows="2"></textarea>
    </div>
    
    <p>
        <input type="submit" value="Send" />
    </p>  
    </div>  
}
    <script type="text/javascript">
        function eraseClient() {
            $('#ClientId').val(0);
        }
        function eraseType() {
            $('#ClientTypeId').val(0);
        }        
    </script>
</fieldset>
