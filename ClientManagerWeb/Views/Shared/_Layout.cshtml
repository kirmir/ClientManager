<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ui.datepicker.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/DataTables-1.8.1/media/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.core.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/DataTables-1.8.1/media/css/demo_table_jui.css")" rel="stylesheet" type="text/css" />

    <link rel="icon" type="image/png" href="../../Content/Images/favicon.png" />
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>Client Manager</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Letters", "Index", "Letters")</li>
                    <li>@Html.ActionLink("History", "Index", "History")</li>
                    <li>@Html.ActionLink("Send letter", "Index", "SendLetter")</li>
                    <li></li>
                    <li>@Html.ActionLink("Clients", "Index", "Client")</li>
                    <li>@Html.ActionLink("Templates", "Index", "Templates")</li>
                    <li>@Html.ActionLink("Tags", "Index", "Tags")</li>
                    <li>@Html.ActionLink("Client types", "Index", "ClientTypes")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
    <div class="autors">
        Authors:
        @{
            var name1 = "<a href=\"mailto:kirmiro@gmail.com\">Kirill Miroshnichenko</a>";
            var name2 = "<a href=\"mailto:ag_molodih@bigmir.net\">Alexander Molodih</a>";
            var output = new[] { string.Join(" and ", name1, name2), string.Join(" and ", name2, name1) };
            @Html.Raw(output[new Random(DateTime.Now.Millisecond).Next(2)])
        }
        <br />
        Rabbits were taken from <a href="http://www.flameia.com/">Flameia Design (Julia Nikolaeva)</a>
    </div>
</body>
</html>
